<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/gradient_drawable"
    tools:context=".view.activity.FindDevicesActivity">
    <ImageView
        android:src="@drawable/ic_logo"
        android:layout_width="120dp"
        android:layout_height="36dp"
        tools:ignore="ContentDescription" />
    <ProgressBar
        android:progressTint="@color/white_off"
        android:layout_marginVertical="8dp"
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_gravity="center"
        android:visibility="gone" />
    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="6dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:text=" Bắt đầu: "
                android:textColor="@color/white_off"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/edtIpStartP1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_bg_edt"
                android:cursorVisible="false"
                android:focusable="false"
                android:hint="192"
                android:inputType="number"
                android:maxLength="3"
                android:padding="8dp"
                android:text="192"
                android:textColor="@color/white_off"
                android:textColorHint="#999999"
                tools:ignore="Autofill,HardcodedText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:text="."
                android:textColor="@color/white_off"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/edtIpStartP2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_bg_edt"
                android:cursorVisible="false"
                android:focusable="false"
                android:hint="168"
                android:inputType="number"
                android:maxLength="3"
                android:padding="8dp"
                android:text="168"
                android:textColor="@color/white_off"
                android:textColorHint="#999999"
                tools:ignore="Autofill,HardcodedText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:text="."
                android:textColor="@color/white_off"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/edtIpStartP3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_bg_edt"
                android:cursorVisible="false"
                android:focusable="false"
                android:hint="20"
                android:inputType="number"
                android:maxLength="3"
                android:padding="8dp"
                android:text="20"
                android:textColor="@color/white_off"
                android:textColorHint="#999999"
                tools:ignore="Autofill,HardcodedText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:text="."
                android:textColor="@color/white_off"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/edtIpStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_bg_edt"
                android:hint="100"
                android:inputType="number"
                android:maxLength="3"
                android:padding="8dp"
                android:textColor="@color/white_off"
                android:textColorHint="#999999"
                tools:ignore="Autofill,HardcodedText" />
        </LinearLayout>
        <LinearLayout
            android:padding="6dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">
            <TextView
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/white_off"
                android:text="Kết thúc: "
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />
            <EditText
                android:focusable="false"
                android:cursorVisible="false"
                android:text="192"
                android:id="@+id/edtIpEndP1"
                android:maxLength="3"
                android:inputType="number"
                android:padding="8dp"
                android:hint="192"
                android:textColorHint="#999999"
                android:textColor="@color/white_off"
                android:background="@drawable/custom_bg_edt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="Autofill,HardcodedText" />
            <TextView
                android:layout_marginHorizontal="6dp"
                android:textStyle="bold"
                android:textColor="@color/white_off"
                android:text="."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />
            <EditText
                android:focusable="false"
                android:cursorVisible="false"
                android:id="@+id/edtIpEndP2"
                android:text="168"
                android:maxLength="3"
                android:inputType="number"
                android:padding="8dp"
                android:hint="168"
                android:textColorHint="#999999"
                android:textColor="@color/white_off"
                android:background="@drawable/custom_bg_edt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="Autofill,HardcodedText" />
            <TextView
                android:layout_marginHorizontal="6dp"
                android:textStyle="bold"
                android:textColor="@color/white_off"
                android:text="."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />
            <EditText
                android:text="20"
                android:id="@+id/edtIpEndP3"
                android:maxLength="3"
                android:inputType="number"
                android:padding="8dp"
                android:hint="20"
                android:textColorHint="#999999"
                android:textColor="@color/white_off"
                android:background="@drawable/custom_bg_edt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="Autofill,HardcodedText" />
            <TextView
                android:layout_marginHorizontal="6dp"
                android:textStyle="bold"
                android:textColor="@color/white_off"
                android:text="."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />
            <EditText
                android:id="@+id/edtIpEnd"
                android:maxLength="3"
                android:inputType="number"
                android:padding="8dp"
                android:hint="249"
                android:textColorHint="#999999"
                android:textColor="@color/white_off"
                android:background="@drawable/custom_bg_edt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="Autofill,HardcodedText" />

        </LinearLayout>
        <EditText
            android:id="@+id/edtPort"
            android:textColor="@color/white_off"
            android:layout_marginVertical="6dp"
            android:inputType="number"
            android:textColorHint="#999999"
            android:padding="8dp"
            android:background="@drawable/custom_bg_edt"
            android:hint="port"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="Autofill,HardcodedText,LabelFor" />
        <TextView
            android:gravity="center"
            android:visibility="gone"
            android:id="@+id/tvIp"
            android:textStyle="bold"
            android:textColor="@color/white_off"
            android:text="Thiết bị được tìm thấy: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />
        <Button
            android:id="@+id/btnFindDevices"
            android:backgroundTint="#1E88E5"
            android:text="Tìm kiếm"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            tools:ignore="HardcodedText" />
        <Button
            android:id="@+id/btnBackToConnectDevice"
            android:backgroundTint="#00ACC1"
            android:text="Quay lại"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />
    </LinearLayout>
</LinearLayout>