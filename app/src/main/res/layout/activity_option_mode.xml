<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_drawable"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".view.activity.OptionModeActivity">

    <ImageView
        android:layout_marginBottom="20dp"
        android:id="@+id/ivLogo"
        android:layout_width="120dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_logo"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"
        tools:ignore="UselessLeaf">

            <AutoCompleteTextView
                android:background="@drawable/custom_bg_edt"
                android:textColor="@color/white"
                android:padding="8dp"
                android:textColorHint="#999999"
                android:hint="Tiếng Việt.."
                android:focusable="false"
                android:cursorVisible="false"
                android:id="@+id/actvLanguage"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:drawableEnd="@drawable/ic_drop_down"
                tools:ignore="HardcodedText,LabelFor,RtlSymmetry" />

            <AutoCompleteTextView
                android:background="@drawable/custom_bg_edt"
                android:textColor="@color/white"
                android:padding="8dp"
                android:textColorHint="#999999"
                android:layout_marginVertical="6dp"
                android:hint="Mode.."
                android:focusable="false"
                android:cursorVisible="false"
                android:id="@+id/actvMode"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:drawableEnd="@drawable/ic_drop_down"
                tools:ignore="HardcodedText,LabelFor,RtlSymmetry" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#039BE5"
            android:elevation="10dp"
            android:shadowColor="@color/white_off"
            android:text="Xác nhận"
            android:textColor="@color/white"
            tools:ignore="HardcodedText" />
    </LinearLayout>
</LinearLayout>