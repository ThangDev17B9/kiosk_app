<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1E88E5"
    tools:context=".view.activity.ResetActivity">
    <ImageView
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/selector_effect_back"
        android:padding="8dp"
        android:id="@+id/ivBackToMainActivity"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_back"
        tools:ignore="ContentDescription" />
    <LinearLayout
        android:background="@drawable/gradient_drawable"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:src="@drawable/ic_logo"
            android:layout_width="120dp"
            android:layout_height="36dp"
            tools:ignore="ContentDescription" />
    </LinearLayout>
    <LinearLayout
        android:background="@color/black"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@drawable/selector_effect"
            android:id="@+id/lnResetDevice"
            android:padding="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UseCompoundDrawables">
            <ImageView
                android:backgroundTint="#00BFA5"
                android:padding="8dp"
                android:background="@drawable/custom_icon_bg"
                android:src="@drawable/ic_device"
                android:layout_width="48dp"
                android:layout_height="48dp"
                tools:ignore="ContentDescription" />
            <TextView
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:text="Reset device"
                android:textColor="@color/white_off"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/selector_effect"
            android:id="@+id/lnResetDefault"
            android:padding="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UseCompoundDrawables">
            <ImageView
                android:backgroundTint="#0091EA"
                android:padding="8dp"
                android:background="@drawable/custom_icon_bg"
                android:src="@drawable/ic_reset"
                android:layout_width="48dp"
                android:layout_height="48dp"
                tools:ignore="ContentDescription" />
            <TextView
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:text="Reset default"
                android:textColor="@color/white_off"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>