<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@drawable/gradient_drawable"
    tools:context=".view.activity.ConnectDeviceActivity">
    <ImageView
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_logo"
        android:layout_width="120dp"
        android:layout_height="36dp"
        tools:ignore="ContentDescription" />
    <ProgressBar
        android:progressTint="@color/white_off"
        android:layout_marginVertical="8dp"
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_gravity="center"
        android:visibility="gone" />
    <LinearLayout
        android:padding="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UselessLeaf">
        <AutoCompleteTextView
            android:background="@drawable/custom_bg_edt"
            android:id="@+id/actvBDKConnectDevice"            android:layout_width="250dp"
            android:layout_height="50dp"
            android:textColorHint="#999999"
            android:textColor="@color/white"
            android:cursorVisible="false"
            android:drawableEnd="@drawable/ic_drop_down"
            android:focusable="false"
            android:hint="Device"
            android:padding="8dp"
            tools:ignore="HardcodedText,LabelFor,RtlSymmetry" />
        <AutoCompleteTextView
            android:background="@drawable/custom_bg_edt"
            android:layout_marginVertical="6dp"
            android:id="@+id/actvMethodConnectDevice"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:textColorHint="#999999"
            android:textColor="@color/white"
            android:cursorVisible="false"
            android:drawableEnd="@drawable/ic_drop_down"
            android:focusable="false"
            android:hint="UDP/ICP"
            android:padding="8dp"
            tools:ignore="HardcodedText,LabelFor,RtlSymmetry" />

        <EditText
            android:background="@drawable/custom_bg_edt"
            android:id="@+id/edtIpAddressConnectDevice"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:textColorHint="#999999"
            android:hint="ip address.."
            android:inputType="text"
            android:padding="8dp"
            tools:ignore="Autofill,HardcodedText,LabelFor,RtlSymmetry" />

        <EditText
            android:textColorHint="#999999"
            android:textColor="@color/white"
            android:layout_marginVertical="6dp"
            android:id="@+id/edtPortConnectDevice"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@drawable/custom_bg_edt"
            android:hint="port.."
            android:inputType="number"
            android:padding="8dp"
            tools:ignore="Autofill,HardcodedText,LabelFor,RtlSymmetry" />

        <EditText
            android:textColor="@color/white"
            android:textColorHint="#999999"
            android:id="@+id/edtPwConnectDevice"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@drawable/custom_bg_edt"
            android:hint="password..(optional)"
            android:inputType="number"
            android:padding="8dp"
            tools:ignore="Autofill,HardcodedText,LabelFor,RtlSymmetry" />
        <LinearLayout
            android:layout_marginTop="6dp"
            android:gravity="right"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="RtlHardcoded">
            <Button
                android:layout_marginRight="6dp"
                android:layout_weight="1"
                android:id="@+id/btnBackToOptionActivity"
                android:shadowColor="@color/black"
                android:elevation="10dp"
                android:text="Quay lại"
                android:textColor="#E0E0E0"
                android:backgroundTint="#00ACC1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="ButtonStyle,HardcodedText" />
            <Button
                android:layout_weight="1"
                android:id="@+id/btnConnectDevice"
                android:shadowColor="@color/black"
                android:elevation="10dp"
                android:text="Kết nối"
                android:textColor="#E0E0E0"
                android:backgroundTint="#1E88E5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="ButtonStyle,HardcodedText" />
        </LinearLayout>
        <Button
            android:id="@+id/btnNextToFindDevicesActivity"
            android:backgroundTint="#3949AB"
            android:text="Tìm thiết bị"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />
    </LinearLayout>
</LinearLayout>