<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@drawable/gradient_drawable"
    tools:context=".view.activity.ConnectDeviceActivity">
    <ImageView
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_logo"
        android:layout_width="120dp"
        android:layout_height="36dp"
        tools:ignore="ContentDescription" />
    <LinearLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UselessLeaf">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:shadowColor="@color/black"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="10"
                android:text="Loại BDK"
                android:textColor="@color/white"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <AutoCompleteTextView
                android:hint="BDK.."
                android:cursorVisible="false"
                android:focusable="false"
                android:id="@+id/actvBDKConnectDevice"
                android:paddingStart="8dp"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/custom_bg_edt"
                android:drawableEnd="@drawable/ic_drop_down"
                tools:ignore="HardcodedText,LabelFor,RtlSymmetry" />


        </LinearLayout>

        <LinearLayout
            android:layout_marginVertical="6dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:shadowColor="@color/black"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="10"
                android:text="Giao tiếp"
                android:textColor="@color/white"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <AutoCompleteTextView
                android:hint="UDP/ICP"
                android:cursorVisible="false"
                android:focusable="false"
                android:id="@+id/actvMethodConnectDevice"
                android:paddingStart="8dp"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/custom_bg_edt"
                android:drawableEnd="@drawable/ic_drop_down"
                tools:ignore="HardcodedText,LabelFor,RtlSymmetry" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:shadowColor="@color/black"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="10"
                android:text="IP Address"
                android:textColor="@color/white"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <EditText
                android:hint="ip address.."
                android:id="@+id/edtIpAddressConnectDevice"
                android:paddingStart="8dp"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/custom_bg_edt"
                android:inputType="text"
                tools:ignore="Autofill,HardcodedText,LabelFor,RtlSymmetry" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginVertical="6dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:shadowColor="@color/black"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="10"
                android:text="Port"
                android:textColor="@color/white"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <EditText
                android:hint="port.."
                android:id="@+id/edtPortConnectDevice"
                android:paddingStart="8dp"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/custom_bg_edt"
                android:inputType="number"
                tools:ignore="Autofill,HardcodedText,LabelFor,RtlSymmetry" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:shadowColor="@color/black"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="10"
                android:text="Mật khẩu"
                android:textColor="@color/white"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <EditText
                android:hint="password..(optional)"
                android:id="@+id/edtPwConnectDevice"
                android:paddingStart="8dp"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/custom_bg_edt"
                android:inputType="number"
                tools:ignore="Autofill,HardcodedText,LabelFor,RtlSymmetry" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginVertical="6dp"
            android:gravity="right"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="RtlHardcoded">
            <Button
                android:layout_marginRight="6dp"
                android:layout_weight="1"
                android:id="@+id/btnBackToOptionActivity"
                android:shadowColor="@color/black"
                android:elevation="10dp"
                android:text="Quay lại"
                android:textColor="#3F51B5"
                android:backgroundTint="#84CBEC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="ButtonStyle,HardcodedText" />
            <Button
                android:layout_weight="1"
                android:id="@+id/btnConnectDevice"
                android:shadowColor="@color/black"
                android:elevation="10dp"
                android:text="Kết nối"
                android:textColor="#3F51B5"
                android:backgroundTint="#ECE6F0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="ButtonStyle,HardcodedText" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>